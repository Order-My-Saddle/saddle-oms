{
  "name": "oms-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-End tests for OMS (Order My Saddle) application",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:staging": "ENVIRONMENT=staging playwright test",
    "test:production": "ENVIRONMENT=production playwright test",
    "test:smoke": "playwright test --grep=\"@smoke\"",
    "test:critical": "playwright test --grep=\"@critical\"",
    "test:regression": "playwright test --grep=\"@regression\"",
    "report": "playwright show-report",
    "install-deps": "playwright install --with-deps",
    "codegen": "playwright codegen",
    "clean": "rm -rf test-results/ playwright-report/ test-output/"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "oms",
    "automation"
  ],
  "author": "OMS Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.14.0",
    "dotenv": "^16.4.5",
    "faker": "^5.5.3"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "dayjs": "^1.11.11"
  }
}
