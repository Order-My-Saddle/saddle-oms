# OMS Kubernetes Secrets Template
# Copy this file to secrets.env and fill in real values.
# NEVER commit secrets.env to Git - it is listed in .gitignore.
#
# Usage:
#   cp kube/secrets.env.example kube/secrets.env
#   # Edit kube/secrets.env with real values
#   ./kube/scripts/manage-secrets.sh seal oms-nest-staging kube/secrets.env
#   # Or for direct creation (development only):
#   ./kube/scripts/manage-secrets.sh create oms-nest-staging kube/secrets.env

# Database (DigitalOcean Managed PostgreSQL)
DATABASE_HOST=db-postgresql-ams3-xxxxx-do-user-xxxxx.ondigitalocean.com
DATABASE_PORT=25060
DATABASE_USERNAME=doadmin
DATABASE_PASSWORD=CHANGE_ME
DATABASE_NAME=oms-nest-staging
DATABASE_SSL_ENABLED=true

# Authentication (generate with: openssl rand -base64 32)
AUTH_JWT_SECRET=CHANGE_ME_MIN_32_CHARS
AUTH_JWT_TOKEN_EXPIRES_IN=1d
AUTH_REFRESH_SECRET=CHANGE_ME_MIN_32_CHARS
AUTH_REFRESH_TOKEN_EXPIRES_IN=7d

# Redis
REDIS_HOST=oms-nest-staging-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME

# Mail (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=CHANGE_ME
MAIL_PASSWORD=CHANGE_ME
MAIL_DEFAULT_EMAIL=noreply@ordermysaddle.com
MAIL_DEFAULT_NAME=OMS Nest

# Encryption (generate with: openssl rand -base64 32)
ENCRYPTION_SECRET=CHANGE_ME_MIN_32_CHARS
